<odoo>
    <record id="whatsapp_send_wizard_view_form" model="ir.ui.view">
        <field name="name">whatsapp.send.wizard.form</field>
        <field name="model">whatsapp.send.wizard</field>
        <field name="arch" type="xml">
            <form string="Send via WhatsApp">
                <sheet>
                    <group>
                        <field name="order_id" readonly="1"/>
                        <field name="message_mode"/>
                        <field name="template_id"
                               domain="[('status','=','APPROVED')]"
                               attrs="{'invisible': [('message_mode','!=','template')], 'required': [('message_mode','=','template')]}"/>
                        <field name="template_body_preview" readonly="1" attrs="{'invisible': [('message_mode','!=','template')]}"/>
                        <field name="template_compliance_hint" readonly="1" attrs="{'invisible': [('message_mode','!=','template')]}"/>
                        <field name="message_body" placeholder="Hello John, here is your order SO123..." attrs="{'required': [('message_mode','in',['text','interactive_button','interactive_list','media_image'])]}"/>
                    </group>
                    <notebook>
                        <page string="Template Variables" attrs="{'invisible': [('message_mode','!=','template')]}">
                            <group>
                                <field name="template_var_1"/>
                                <field name="template_var_2"/>
                                <field name="template_var_3"/>
                                <field name="template_var_4"/>
                                <field name="template_var_5"/>
                            </group>
                        </page>
                        <page string="Interactive Buttons" attrs="{'invisible': [('message_mode','!=','interactive_button')]}">
                            <group>
                                <field name="button_1" placeholder="Pay now"/>
                                <field name="button_2" placeholder="View invoice"/>
                                <field name="button_3" placeholder="Talk to agent"/>
                            </group>
                        </page>
                        <page string="Interactive List" attrs="{'invisible': [('message_mode','!=','interactive_list')]}">
                            <group>
                                <field name="list_title" placeholder="Pick an option"/>
                                <field name="list_button_label" placeholder="Choose"/>
                                <field name="list_section_title" placeholder="Available options"/>
                                <field name="list_row_1_title" placeholder="Option 1"/>
                                <field name="list_row_1_description"/>
                                <field name="list_row_2_title" placeholder="Option 2"/>
                                <field name="list_row_2_description"/>
                                <field name="list_row_3_title" placeholder="Option 3"/>
                                <field name="list_row_3_description"/>
                            </group>
                        </page>
                        <page string="Media" attrs="{'invisible': [('message_mode','!=','media_image')]}">
                            <group>
                                <field name="media_url" placeholder="https://.../image.jpg"/>
                                <label string="Use a publicly accessible HTTPS URL; WhatsApp fetches the media directly." class="text-muted"/>
                            </group>
                        </page>
                    </notebook>
                    <group>
                        <field name="include_sale_order_pdf"/>
                        <field name="include_invoice_pdf"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Send" type="object" name="action_send" class="btn-primary"/>
                    <button string="Cancel" class="btn-link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
